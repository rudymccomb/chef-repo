<%= render 'vhost/_app_stream.erb' if @template == 'rack' %>

server {
  listen      80 deferred;
  server_name <%= @site %> *.<%= @site %>;
  return      301 https://$host$request_uri;
}

server {
  listen 443 deferred ssl http2;

  <%= render "vhost/_#{@template}server.erb" %>
  <%= render "vhost/_ssl.erb" %>
  <%= render "vhost/_#{@template}app.erb" %>
}
