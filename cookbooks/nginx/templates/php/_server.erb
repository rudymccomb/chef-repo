# begin _phpserver
  server_name <%= @site %> *.<%= @site %>;

  client_body_in_file_only clean;
  client_body_buffer_size 32K;
  client_max_body_size 4G;

  server_tokens off;

  keepalive_timeout 5;

  # path for static files
  root <%= @site_dir %>;

  index index.html index.htm index.php;

  fastcgi_intercept_errors on;
  # end _phpserver
