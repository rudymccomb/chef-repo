# begin _<%= @template %>app
  try_files $uri/index.html $uri.html $uri @app;

  location /private_files/ {
    alias <%= @www_dir %>/<%= @site %>/current/private/;
    internal;
  }

  location @app {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Accel-Mapping "<%= @www_dir %>/<%= @site %>/releases/\d{14}/private/=/private_files/";
    proxy_set_header Host $http_host;
    proxy_redirect off;
    <%= 'proxy_read_timeout 360;' if @long_proxy_timeout %>

    proxy_pass http://app_stream;
  }

  location ~ /\. {
    access_log off;
    log_not_found off;
    deny all;
  }

  error_page 500 502 503 504 /500.html;
  location = /500.html {
    root <%= @www_dir %>/<%= @site %>/current/public;
  }
  # end _rackapp
