{
  "name": "mawidabp_app",
  "description": "Mawidabp app server role",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": {
    "nginx": {
      "sites": [
        { "name": "mawidabp.com" }
      ]
    },
    "packages": {
      "list": {
        "debian": [
          "imagemagick"
        ],
        "rhel": [
          "ImageMagick"
        ]
      }
    },
    "postgresql": {
      "databases": [
        {
          "name": "mawidabp_production",
          "password": "mawidabp_production",
          "owner": "mawidabp_production"
        }
      ]
    }
  },
  "override_attributes": {
  },
  "run_list": [
    "role[base]",
    "role[spanish_host]"
  ]
}
